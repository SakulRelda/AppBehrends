<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_machine_maintenance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lukasadler.test1.MachineMaintenanceActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_report_image" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@color/colorTeal"
            />
        <TextView
            android:id="@+id/lblMachineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:text="Maschinenname"
            android:textColor="@color/colorTeal"
            />
        <TextView
            android:id="@+id/lblMachineTyp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MachineType"
            />
        <TextView
            android:id="@+id/lblMachineLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MachineLocation"
            />
        <TextView
            android:id="@+id/lblMaintenanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/colorTeal"
            android:textSize="25dp"
            android:text="Maintenance"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@color/colorTeal"
            />
        <ListView
            android:id="@+id/listMaintenance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/colorTeal"
            android:dividerHeight="4px"></ListView>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddMaintenance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:background="@color/colorTeal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:tint="@android:color/white"
        app:srcCompat="@android:drawable/ic_input_add"/>

</RelativeLayout>
